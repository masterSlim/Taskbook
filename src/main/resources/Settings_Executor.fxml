<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="600.0" styleClass="stage" stylesheets="@view/Style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Settings_Executor">
   <children>
      <VBox alignment="CENTER" prefHeight="609.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="userpic" fitHeight="180.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" styleClass="area">
               <image>
                  <Image url="@icons/user.png" />
               </image>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <rotationAxis>
                  <Point3D />
               </rotationAxis>
               <viewport>
                  <Rectangle2D />
               </viewport></ImageView>
            <Label fx:id="labelUserName" styleClass="h1" text="Имя пользователя">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="labelPosition" styleClass="h2" text="Должность">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <VBox prefHeight="120.0">
               <children>
                  <Label styleClass="h2" text="Рабочая папка">
                     <VBox.margin>
                        <Insets left="20.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextArea fx:id="areaDirectory" minHeight="45.0" prefHeight="45.0" prefWidth="200.0" promptText="Адрес рабочей папки" styleClass="area">
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </VBox.margin>
                  </TextArea>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </VBox>
            <VBox layoutX="10.0" layoutY="343.0" prefHeight="120.0">
               <children>
                  <Label styleClass="h2" text="Телефон">
                     <VBox.margin>
                        <Insets left="20.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextArea fx:id="areaPhone" minHeight="45.0" prefHeight="45.0" prefWidth="200.0" promptText="Номер телефона для связи" styleClass="area">
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </VBox.margin>
                  </TextArea>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </VBox>
            <VBox layoutX="10.0" layoutY="455.0" prefHeight="120.0">
               <children>
                  <Label styleClass="h2" text="Почта">
                     <VBox.margin>
                        <Insets left="20.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextArea fx:id="areaEmail" minHeight="45.0" prefHeight="45.0" prefWidth="200.0" promptText="Адрес рабочей почты" styleClass="area" wrapText="true">
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </VBox.margin>
                  </TextArea>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </VBox>
            <VBox layoutX="10.0" layoutY="647.0" prefHeight="120.0">
               <children>
                  <Label styleClass="h2" text="Новый пароль">
                     <VBox.margin>
                        <Insets left="20.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <PasswordField fx:id="areaNewPassword" minHeight="45.0" prefHeight="45.0" prefWidth="200.0" promptText="Введите новый пароль" styleClass="area">
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </VBox.margin>
                  </PasswordField>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </VBox>
            <VBox layoutX="10.0" layoutY="707.0" prefHeight="120.0">
               <children>
                  <Label styleClass="h2" text="Старый пароль">
                     <VBox.margin>
                        <Insets left="20.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <PasswordField fx:id="areaOldPassword" minHeight="45.0" prefHeight="45.0" prefWidth="200.0" promptText="Обязательное поле при изменении пароля" styleClass="area">
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </VBox.margin>
                  </PasswordField>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </VBox>
            <Button mnemonicParsing="false" onMouseClicked="#saveSettings" styleClass="imageButton" text="Сохранить">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
